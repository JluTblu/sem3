# Makefile для компиляции C++ проекта

# Имя исполнимого файла
TARGET = program

# Компилятор
CXX = g++

# Флаги компилятора
CXXFLAGS = -Wall

# Исходные файлы
SRC = lab1.cpp

# Объектные файлы
OBJ = $(SRC:.cpp=.o)

# Правило по умолчанию, которое будет срабатывать при вызове `make`
all: $(TARGET)

# Правило для компиляции исполнимого файла
$(TARGET): $(OBJ)
	$(CXX) $(OBJ) -o $(TARGET) $(LDFLAGS)

# Правило для компиляции исходников в объектные файлы
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Правило для удаления объектных и исполнимых файлов
clean:
	rm -f $(OBJ) $(TARGET)

# Правило для перекомпиляции, если что-то изменилось
rebuild: clean all

.PHONY: all clean rebuild
